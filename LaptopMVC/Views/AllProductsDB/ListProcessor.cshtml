@model IEnumerable<LaptopMVC.Models.ProcessorViewModel>
@{
    ViewBag.Title = "ListProcessor";
}

<h2>ListProcessor</h2>

<div class="navbar navbar-static-top ">
    <div class="container">

        <button class="navbar-toggle" data-toggle="collapse" data-target=".navHeaderCollapse">
            <span class="icon-bar" id="col1"></span>
            <span class="icon-bar" id="col1"></span>
            <span class="icon-bar" id="col1"></span>
        </button>

        <div class="collapse navbar-collapse navHeaderCollapse">
            <ul class="nav navbar-nav navbar-left">
                @if (User.IsInRole("Admin"))
                {
                    <li><a href="@Url.Action("AddProcessor", "AllProductsDB")" id="col">Добави Процесор</a></li>
                }
                <li><a href="@Url.Action("Index", "AllProductsDB")" id="col">Продукри</a></li>
                <li><a href="@Url.Action("ListVideoCard", "AllProductsDB")" id="col">Видео карти</a></li>
                <li><a href="@Url.Action("ListBottomBoard", "AllProductsDB")" id="col">Дънни платки</a></li>
            </ul>
        </div>

    </div>
</div>
<table class="table table-striped">
    <tr>
        <td>ID</td>
        <td>Име</td>
        <td>GHz</td>
        <td>Ядра</td>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.Id</td>
        <td><img src="@Url.Content("~/Content/Images/"+item.Image)"style="width:50px; height:50px" /></td>
        <td>@item.Name</td>
        <td>@item.PoworGHz</td>
        <td>@item.Core</td>
        @if (User.IsInRole("Admin"))
        {
            <td><a href="@Url.Action("AddProcessor", "AllProductsDB",new { Id = item.Id})" id="col">Промени Процесор</a></td>
            <td><a href="@Url.Action("DeleteProcessor", "AllProductsDB", new { Id = item.Id, @class = "btn btn-danger btn-block"})" id="col"><i class="glyphicon glyphicon-trash"></i></a></td>
        }
        <td><a href="@Url.Action("CartProcessor", "AllProductsDB", new { Id = item.Id })" id="col">Поръчай</a></td>
    </tr>

    }
</table>
